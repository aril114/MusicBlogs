@model IEnumerable<MusicBlogs.Models.Article>

@{
    ViewData["Title"] = "Популярные статьи";
}

<nav class="navbar navbar-expand rounded">
    <div class="container-fluid">
        <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample10">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" asp-action="Index">Новые статьи</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-action="BestRated">Статьи с наибольшим рейтингом</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="articles d-flex flex-column gap-3">
    @foreach (Article article in Model)
    {
        <partial name="_ArticleExcerpt" model="@article" />
    }
</div>

<partial name="_Pagination" model="@ViewBag.PageInfo" />