<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shoegaze</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Иконки Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/MusicBlogs.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand pt-0" asp-controller="Home" asp-action="Index">Shoegaze</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav flex-grow-1">    
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Drafts" asp-action="Create">Написать статью</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Drafts" asp-action="Index">Черновики</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Bookmarks" asp-action="Index">Закладки</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Index" asp-route-username="@User.Identity.Name">Мой профиль</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Search" asp-action="Index">Поиск</a>
                            </li>
                        </ul>

                        <ul class="navbar-nav text-end">
                            <a class="nav-link" asp-controller="Auth" asp-action="Logout">Выйти из аккаунта</a>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Search" asp-action="Index">Поиск</a>
                            </li>
                        </ul>

                        <ul class="navbar-nav text-end">
                            <a class="nav-link" asp-controller="Auth" asp-action="Logreg">Войти или зарегистрироваться</a>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
 
    <div class="container-fluid py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
