@model IEnumerable<MusicBlogs.Models.Article>

@{
    ViewData["Title"] = "Домашняя страница";
}

<div class="articles">
    @foreach (Article article in @Model)
    {
        <!-- Статья -->
        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <!-- Контейнер статьи -->
                    <div class="border rounded-3 p-4 bg-white mb-4">
                        <!-- Имя автора, дата публикации и рейтинг -->
                        <div class="text-muted small">
                            <a style="text-decoration: none" asp-controller="User" asp-route-login="@article.login_Users">Автор: @article.login_Users</a> ·
                            <span class="fw-light">@article.published_at.ToString("f")</span> ·
                            <span class="badge bg-success bg-opacity-10 text-success">Рейтинг: @article.rating</span>
                            <a class="page-link" asp-controller="Article" asp-route-id="@article.id">Перейти к статье</a>
                        </div>
                        


                        <!-- Заголовок статьи -->
                        <h2 class="mb-3">@article.title</h2>

                        <!-- Содержание статьи -->
                        <div class="lh-base">
                            <p>@article.content</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

