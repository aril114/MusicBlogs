@{
    ViewData["Title"] = "Поиск";
}

<form asp-action="q" method="post">
    <div class="mb-3">
        <label for="query" class="form-label">Текст запроса</label>
        <input type="text" class="form-control" name="query" />
    </div>
    
    <div class="mb-3">
        <fieldset>
            <div class="form-check">
                <input type="radio" name="searchIn" class="form-check-input" value="title" checked>
                <label class="form-check-label" for="title">Искать в заголовке</label>
            </div>
            <div class="form-check">
                <input type="radio" name="searchIn" class="form-check-input" value="content">
                <label class="form-check-label" for="content">Искать в содержании</label>
            </div>
        </fieldset>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Найти</button>
    </div>

    <label for="sort-by" class="form-label">Сортировать по</label>

    <div class="row">
        <fieldset class="col-md-3">
            <div class="form-check">
                <input type="radio" name="sortBy" class="form-check-input" value="date">
                <label class="form-check-label" for="date">По дате публикации</label>
            </div>
            <div class="form-check">
                <input type="radio" name="sortBy" class="form-check-input" value="rating" checked>
                <label class="form-check-label" for="rating">По рейтингу</label>
            </div>
        </fieldset>

        <fieldset class="col">
            <div class="form-check">
                <input type="radio" name="ascDesc" class="form-check-input" value="desc" checked>
                <label class="form-check-label" for="desc">По убыванию</label>
            </div>
            <div class="form-check">
                <input type="radio" name="ascDesc" class="form-check-input" value="asc">
                <label class="form-check-label" for="asc">По возрастанию</label>
            </div>
        </fieldset>
    </div>
</form>